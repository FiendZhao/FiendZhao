<?xml version="1.0" encoding="utf-8"?>
    <android.support.v4.widget.DrawerLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/id_drawerlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout
            android:id="@+id/dl_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/ll_pdl"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <!--频道-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    >
                    <RelativeLayout
                        android:layout_weight="1"
                        android:id="@+id/rl_colum"
                        android:layout_width="match_parent"
                        android:layout_height="40dp">
                        <com.example.zsq.mynews.view.ColumnHorizontalScrollView
                            android:id="@+id/mColumnHorizontalScrollView"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:scrollbars="none">
                            <LinearLayout
                                android:id="@+id/mRadioGroup_content"
                                android:orientation="horizontal"
                                android:paddingRight="10dp"
                                android:paddingLeft="10dp"

                                android:gravity="center_vertical"
                                android:layout_width="match_parent"
                                android:layout_height="40dp">
                            </LinearLayout>
                        </com.example.zsq.mynews.view.ColumnHorizontalScrollView>
                        <ImageView
                            android:id="@+id/shade_left"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:background="@drawable/channel_leftblock"
                            android:layout_width="10dp"
                            android:visibility="gone"
                            android:layout_height="40dp"/>
                        <ImageView
                            android:id="@+id/shade_right"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:background="@drawable/channel_rightblock"
                            android:layout_width="10dp"
                            android:visibility="gone"
                            android:layout_height="40dp"/>
                    </RelativeLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:id="@+id/ll_more_colums"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp">
                        <ImageView
                            android:id="@+id/button_more_colums"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/channel_glide_day_bg"
                            android:layout_width="40dp"
                            android:layout_height="40dp"/>
                    </LinearLayout>
                </LinearLayout>
                <!--新闻内容-->
                <android.support.v4.view.ViewPager
                    android:id="@+id/mViewPager"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    />
            </LinearLayout>
        </FrameLayout>
    <!--侧滑栏内容-->
    <include layout="@layout/drawerlayout"/>
</android.support.v4.widget.DrawerLayout>