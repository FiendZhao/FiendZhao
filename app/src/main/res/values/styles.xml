<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!--将ActionBar隐藏，这里使用ToolBar-->
        <item name="windowActionBar">false</item>
        <!--如果使用API Level 22以上编译的话，要拿掉前缀字-->
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">#cc3232</item>
        <item name="colorPrimaryDark">#cc3232</item>
        <item name="colorAccent">@color/tab_text_highlight</item>
    </style>
    <style name="top_category_scroll_view_item_text">
        <item name="android:textSize">16.0sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="title_bar_style">
        <item name="android:background">@drawable/bg_titlebar</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">16dp</item>
    </style>

    <style name="top_update_count_base">
        <item name="android:textSize">13.0sp</item>
        <item name="android:shadowDy">-1.0</item>
    </style>

    <style name="top_update_count">
        <item name="android:textSize">10.0sp</item>
        <item name="android:textColor">#ffcc3131</item>
        <item name="android:gravity">center</item>
        <item name="android:height">15.0dip</item>
        <item name="android:width">15.0dip</item>
    </style>

    <style name="title_text_style">
        <item name="android:textSize">20.0sp</item>
        <item name="android:textColor">@color/title_text_color</item>
    </style>
    <style name="listView_img">
        <item name="android:scaleType">fitXY</item>
        <item name="android:layout_margin">6dp</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:layout_width">100dp</item>
        <item name="android:src">@drawable/xinwentubiao</item>
    </style>
    <style name="listView_tv_title">
        <item name="android:text">标题</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#5d5a5a</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>
    <style name="listView_tv_item">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:text">关键字</item>
        <item name="android:textColor">#7a7878</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="chlstyle_tv">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/subscribe_item_pressed_stroke_night</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">28dp</item>
    </style>
    <style name="chlstyle_img">
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_width">20dp</item>
    </style>
    <style name="chlstyle">
        <item name="android:paddingLeft">20dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">30dp</item>
    </style>
</resources>